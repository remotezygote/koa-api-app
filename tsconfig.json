{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"outDir": "./dist",
		"sourceMap": true
	},
	"include": [
		"./*.ts",
		"logger/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}