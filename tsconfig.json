{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2015",
		"module": "Node16",
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"preserveConstEnums": true,
		"outDir": "./dist",
		"sourceMap": true
	},
	"include": [
		"src",
    "src/global.d.ts"
  ],
	"exclude": [
		"node_modules"
	]
}