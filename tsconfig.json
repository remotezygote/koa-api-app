{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node16",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"strict": true,
		"preserveConstEnums": true,
		"outDir": "./dist",
		"sourceMap": true
	},
	"include": [
		"src/*.ts",
		"src/logger/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}