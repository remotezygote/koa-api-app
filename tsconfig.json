{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es2015",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"preserveConstEnums": true,
		"outDir": "./dist",
		"sourceMap": true,
		"noEmit": true
	},
	"include": [
		"src",
		"src/global.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}